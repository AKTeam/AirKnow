# SPECIFY THE M-SUPPORT iOS VERSION
platform :ios, '8.0'

# USE DYNAMIC LIBRARY 
use_frameworks!

# COCOAPOD INSTALLER
def startPodInstaller
	# DEPENDENCY
	pod 'AirKnow', :path => './'
end

# TARGET 'AIRKNOW' ACTION
target 'AirKnow' do
    # INSTALL DEPENDENCIES
    startPodInstaller
    # SPECIFY THE SWIFT VERSION
    swift_version = '3.0'
end

